<h1>Edit item</h1>
{{#each message}}
    <div class="alert alert-danger">
        {{message}}
    </div>
{{/each}}

<form action="/dishes/edit/{{item.id}}?_method=PUT" method="post" class="col-sm-6" enctype="multipart/form-data">
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" name="name" class="form-control" value="{{item.name}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="vegan" class="col-sm-2 col-form-label">Vegan?</label>
        <input name="vegan" type="checkbox" {{#if item.vegan}}checked="checked"{{/if}} class="form-control" id="vegan">
    </div>
    <div class="form-group row">
        <label for="category" class="col-sm-2 col-form-label">Category</label>
        <select name="category" id="category" class="form-control">{{#select item.category}}
            <option value="muscles">For muscles</option>
            <option value="healthy">Healthy</option>
            <option value="fresh">Fresh</option>{{/select}}
        </select>
    </div>
    <div class="form-group row">
        <label for="price" class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10">
            <input type="number" name="price" class="form-control"  value="{{item.price}}">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="file" name="file" class="form-control">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>