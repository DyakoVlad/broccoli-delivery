<form action="/auth/code/{{id}}" method="post" class="col-sm-6" enctype="multipart/form-data">
    <div class="alert-danger">You have {{attempts}} attempts</div>
    <div class="form-group row">
        <label for="code" class="col-sm-2 col-form-label">Your verify code</label>
        <div class="col-sm-10">
            <input type="number" name="code" class="form-control">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>